<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyActivity">

    <TextView
        android:id="@+id/survey_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Survey"
        android:textColor="#FF3369"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sleepTextView"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:text="What time do you go to sleep?"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wakeupTime" />

    <TextView
        android:id="@+id/sleepTime"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:hint="12:00 am"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTextView" />

    <TextView
        android:id="@+id/wakeUpTextView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:text="What time do you wake up?"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/survey_text_view" />

    <TextView
        android:id="@+id/wakeupTime"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:hint="12:00 am"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wakeUpTextView" />


    <TextView
        android:id="@+id/start_work_time_edit_text"
        android:layout_width="341dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:text="What time do you start Work/School?"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTime" />

    <TextView
        android:id="@+id/StartWorkTIme"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:hint="12:00 am"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_work_time_edit_text" />

    <TextView
        android:id="@+id/endWorkTime"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:hint="12:00 am"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_time_edit_text" />

    <TextView
        android:id="@+id/end_time_edit_text"
        android:layout_width="341dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:text="What time do you stop Work/School?"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartWorkTIme" />

    <TextView
        android:id="@+id/nextButton"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:onClick="goHome"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>